# LoveChild1.0 MCP Server Configuration

# AI Provider Configuration (at least one required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Default AI provider (anthropic, openai, groq)
DEFAULT_AI_PROVIDER=anthropic

# Firecrawl Configuration (required for web scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Sandbox Provider Configuration
SANDBOX_PROVIDER=vercel

# E2B Configuration (if using E2B sandbox)
E2B_API_KEY=your_e2b_api_key_here

# Vercel Configuration (if using Vercel sandbox)
VERCEL_OIDC_TOKEN=your_vercel_oidc_token_here
# OR use PAT method:
# VERCEL_TOKEN=your_vercel_token_here
# VERCEL_TEAM_ID=your_vercel_team_id_here
# VERCEL_PROJECT_ID=your_vercel_project_id_here

# Workspace Configuration
WORKSPACE_DIR=./workspace
AUTO_SAVE=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/lovechild-mcp.log

# Debug Configuration
DEBUG=false
VERBOSE=false